<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="screensaver.cpblobs"
  version="3.0.2"
  name="CpBlobs"
  provider-name="Team Kodi">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="xbmc.ui.screensaver"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Metaballs moving around</summary>
    <description lang="en">cpBlobs is a screensaver displaying metaballs moving around inside a cube.</description>
    <platform>@PLATFORM@</platform>
    <license>GPL-2.0</license>
    <source>https://github.com/xbmc/screensaver.cpblobs</source>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
      <screenshot>resources/screenshot-01.jpg</screenshot>
      <screenshot>resources/screenshot-02.jpg</screenshot>
      <screenshot>resources/screenshot-03.jpg</screenshot>
    </assets>
  </extension>
</addon>
